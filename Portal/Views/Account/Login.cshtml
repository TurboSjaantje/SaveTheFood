@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body style="overflow-x: hidden; overflow-y: hidden;">
    @*NAVBAR*@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3" style="z-index: 3;">
        <div class="container-fluid">
            <p><img src="~/images/logo.png" height="35px" width="auto" style="margin-bottom: 5px;" /> SaveTheFood</p>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation" aria-valuetext="Navigatiebalk">
                <img class="navbar-toggler-icon" src="~/images/icons8-menu-100.png" alt="navigatiebalk">
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            </div>
        </div>
    </nav>

    @*BODY*@
    <div style="padding-top: 7vh; padding-bottom: 7vh;">
        <div class="row">
            <div class="col-lg-6 col-md-8 container-custom ms-auto me-auto p-4">
                <div class="row text-center">
                    <div class="btn-group" role="group" style="max-width: 540px; margin: auto;">
                        <input type="radio" class="btn-check" name="btnradio2" id="btnradio3" autocomplete="off">
                        <label class="btn btn-custom-secondary-outline active" for="btnradio2">  Inloggen  </label>

                        <input type="radio" class="btn-check" name="btnradio2" id="btnradio4" autocomplete="off">
                        <label class="btn btn-custom-secondary-outline" for="btnradio2">Registreren</label>
                    </div>
                </div>
                <div class="row text-center mt-5">
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group" style="max-width: 520px; margin: auto;">
                            <div><span asp-validation-for="Email" class="text-danger"></span></div>
                            <label class="mb-2 text-center text-white" asp-for="Email"></label>
                            <input class="form-control" asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group" style="max-width: 520px; margin: auto;">
                            <div><span asp-validation-for="Password" class="text-danger"></span></div>
                            <label class="mb-2 text-center text-white" asp-for="Password"></label>
                            <input class="form-control" asp-for="Password" class="form-control" />
                        </div>
                        <button class="btn btn-custom-secondary text-black mt-3 text-center" type="submit">Log In</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $('.btn-group').on('click', '.btn', function () {
            $(this).addClass('active').siblings().removeClass('active');
        });
    </script>
</body>

</html>
