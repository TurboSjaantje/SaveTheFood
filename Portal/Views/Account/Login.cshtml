@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body style="overflow-x: hidden; overflow-y: hidden;">
    @*NAVBAR*@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3" style="z-index: 3;">
        <div class="container-fluid">
            <a class="navbar-brand nav-link" asp-area="" asp-controller="Home" asp-action="Index">SaveTheFood</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <img class="navbar-toggler-icon" src="~/images/icons8-menu-100.png">
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            </div>
        </div>
    </nav>

    @*BODY*@
    <div style="padding-top: 7vh; padding-bottom: 7vh;">
        <div class="row">
            <div class="col-lg-6 col-md-8 login-content">
                <div class="row text-center">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="btnradio2" id="btnradio3" autocomplete="off">
                        <label class="btn btn-custom-outline active" for="btnradio2">  Inloggen  </label>

                        <input type="radio" class="btn-check" name="btnradio2" id="btnradio4" autocomplete="off">
                        <label class="btn btn-custom-outline" for="btnradio2">Registreren</label>
                    </div>
                </div>
                <div class="row text-center mt-5">
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group mt-2">
                            <div><span asp-validation-for="Email" class="text-danger"></span></div>
                            <div class="row">
                                <label class="col-sm-2 text-end text-dark pe-5" asp-for="Email"></label>
                                <input class="col-sm-10" asp-for="Email" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group mt-2">
                            <div><span asp-validation-for="Password" class="text-danger"></span></div>
                            <div class="row">
                                <label class="col-sm-2 text-end text-dark pe-5" asp-for="Password"></label>
                                <input class="col-sm-10" asp-for="Password" class="form-control" />
                            </div>
                        </div>
                        <button class="btn btn-custom mt-3" type="submit">Log In</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $('.btn-group').on('click', '.btn', function () {
            $(this).addClass('active').siblings().removeClass('active');
        });
    </script>
</body>

</html>
