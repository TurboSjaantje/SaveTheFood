<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
    @*NAVBAR*@
    <nav id="navbar" class="navbar navbar-expand-sm fixed-top navbar-toggleable-sm">
        <div class="container-fluid">
            <a class="navbar-brand nav-link" asp-area="" asp-controller="Home" asp-action="Index">SaveTheFood</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <img class="navbar-toggler-icon" src="~/images/icons8-menu-100.png">
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @if (User.HasClaim("UserType", "regularuser"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pakket" asp-action="Reserveren">Reserveren</a>
                        </li>
                    }
                    @if (User.HasClaim("UserType", "poweruser")) {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pakket" asp-action="Pakketten">Pakketten</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Locaties">Locaties</a>
                    </li>
                    @if (User.HasClaim("UserType", "poweruser"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pakket" asp-action="Pakketbeheer">Pakketbeheer</a>
                        </li>
                    }
                    @if (User.HasClaim("UserType", "regularuser"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pakket" asp-action="Reserveringen">Reserveringen</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav account-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/icons8-account-100.png" width="25px" height="25px" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-action="Profiel" asp-controller="Account">Account</a></li>
                            <li><a class="dropdown-item dropdown-item-disabled" asp-action="Logout" asp-controller="Account">Uitloggen</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @*BODY*@
    <div style="padding-top: 7vh; padding-bottom: 7vh;">
        @RenderBody()
    </div>

    @*FOOTER*@
    <footer class="d-flex flex-wrap justify-content-between align-items-center border-top p-3 mb-0 p-0" 
            style="bottom: 0; position: absolute; width: 100%; margin-top: 5vh;">
        <p class="col-md-4 mb-0">© 2022 SaveTheFood &trade;</p>

        <ul class="nav col-md-4 justify-content-end">
            <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link px-2 me-1">Contact</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="AboutUs" class="nav-link px-2">About Us</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="FAQ" class="nav-link px-2">FAQ</a></li>
        </ul>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
